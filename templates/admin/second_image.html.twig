{% extends 'base_admin.html.twig' %}

{% block title %}Espace Admin{% endblock %}

{% block body %}

    <div class="formSecondImage">
        <div class="container">
            <div class="container-image">
                <h2>Voici votre image "Avant"</h2>
                <img src="{{ vich_uploader_asset(imageBefore, 'images') }}" alt="">
            </div>
            <div class="container-form">
                <h2>Ajouter votre image "Après"</h2>
                {{ form_start(formAfter) }}
                    {{ form_row(formAfter.imageFile) }}
                    {{ form_row(formAfter.categories) }}
                    <button type="submit">Ajouter l'image Après</button>
                {{ form_end(formAfter) }}
            </div>
        </div>
    </div>

{% endblock %}